/**/#
/**/# Make for InterViews
/**/# 

/*
 * Define your C++ compiler in IVlocal.def.
 */

#if defined(Use_g_plusplus)
ALL = g++.all iv.World
#else
ALL = iv.World
#endif

all:: bootstrapped ${ALL}

bootstrapped:
	@echo "You must 'make bootstrap' first."
	@echo 'Make sure iv/installed/bin/$$CPU is in your path.'
	@false

bootstrap:
	cd iv; make bootstrap
	${MAKE} Makefile
	@touch bootstrapped

g++.all:
	cd g++; make Makefile; make

iv.World:
	cd iv; make World
